# OnlyOffice Document Server Configuration

# JWT Secret - Thay đổi giá trị này thành một chuỗi ngẫu nhiên mạnh
JWT_SECRET=my_jwt_secret_change_this_to_random_string

# JWT Settings
JWT_ENABLED=true
JWT_HEADER=Authorization
JWT_IN_BODY=true

# Domain Configuration
DOMAIN=onlyoffice.example.com

# Port Configuration
HTTP_PORT=80
HTTPS_PORT=443
ONLYOFFICE_HTTP_PORT=8880
ONLYOFFICE_HTTPS_PORT=8443

# Database Configuration (optional - for advanced setup)
# DB_TYPE=postgres
# DB_HOST=postgres
# DB_PORT=5432
# DB_NAME=onlyoffice
# DB_USER=onlyoffice
# DB_PWD=onlyoffice_password

# RabbitMQ Configuration (optional - for advanced setup)
# RABBITMQ_HOST=rabbitmq
# RABBITMQ_USER=guest
# RABBITMQ_PWD=guest

# Redis Configuration (optional - for advanced setup)
# REDIS_SERVER_HOST=redis
# REDIS_SERVER_PORT=6379
