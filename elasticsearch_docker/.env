# ==============================
# Elasticsearch Cluster Settings
# ==============================
STACK_VERSION=8.17.4
CLUSTER_NAME=es_cluster
LICENSE=basic

# ==============================
# Node Configuration
# ==============================
ES_PORT=9200

# JVM Heap size (Node ES)
# 6GB heap / node → ổn định cho máy có 24GB RAM
ES_JAVA_XMS=6g
ES_JAVA_XMX=6g

# Memory limit container
# ≥ 2 × heap → để hệ điều hành còn cache
ES_MEM_LIMIT=14g

# ==============================
# Security Settings
# ==============================
# Tắt SSL và security để tránh lỗi bootstrap trong môi trường dev
XPACK_SECURITY_ENABLED=false
XPACK_HTTP_SSL_ENABLED=false
XPACK_TRANSPORT_SSL_ENABLED=false
